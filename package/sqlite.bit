/*
    sqlite.bit -- Bit File for SQLite
 */

Bit.load({

    defaults: {
        '+includes': [ '.' ]
    },

    targets: {
        libsqlite3: {
            type: 'lib',
            sources: [ 'sqlite3.c' ],
            '-compiler': [
                '-Wall',
                '-Wshorten-64-to-32',
            ],
        },
	},
})
